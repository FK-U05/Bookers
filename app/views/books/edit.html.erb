<div class="edit-box">

<h1 class="edit-top">Editing Book</h1>

<% if @book.errors.any? %>
 <%= @book.errors.count %> errors prohibited this book from being saved:
<ul>
  <% @book.errors.full_messages.each do |message| %>
<li><%= message %></li>
 <% end %>
</ul>
<% end %>

<%= form_with model:@book,url:book_path(@book.id),method: :patch do |f| %>

<div class="edit-title">
  <strong>Title</strong>
<%= f.text_field :title %>

</div>

<p class="edit-body">
  <strong>Body</strong>
</p>
<%= f.text_area :body %>

<p class="update-botan"><%= f.submit'Update Book' %></p>


<%= link_to 'Show',book_path(@book)%> |
<%= link_to 'Back',books_path%>

</div>
</div>
<% end %>
