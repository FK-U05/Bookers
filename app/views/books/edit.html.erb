<div class="edit-box">

<h1 class="edit-top">Editing Book</h1>

<%= form_with model:@book,url:book_path(@book.id),method: :patch do |f| %>

<p class="edit-title">
  <strong>Title</strong>
  </p>
<%= f.text_field :title %>

<p class="edit-body">
  <strong>Body</strong>
</p>
<%= f.text_area :body %>

<p class="update-botan"><%= f.submit'Update Book' %></p>


<%= link_to 'Show',book_path(@book)%> |
<%= link_to 'Back',books_path%>

</div>
</div>
<% end %>
